    <rules>
        <fullName>Email Alert</fullName>
        <actions>
            <name>Email_welcoming_the_new_Member</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(NOT(ISBLANK( Email__c )))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
